main.home
  section(ng-repeat="item in ::page.data.assets track by item._id"
    class="{{item.fields.layout.value || 'fullScreen'|normalize}}" ng-style="{backgroundColor: item.fields.color.value || 'white'}")

    div(ng-switch="item.type")

      //- heading start
      .heading(ng-switch-when="heading" ng-class="item.fields.layout.value"
        ng-style="{backgroundColor: item.fields.color.value}")
        div(ng-switch="item.fields.size.value")
          div(ng-switch-when="1")
            h1 {{::item.fields.title.value}}
          div(ng-switch-default)
            h2 {{::item.fields.title.value}}
          div(ng-switch-when="3")
            h3 {{::item.fields.title.value}}


      //- imageContent start
      .imageContent(ng-switch-when="imageContent")
        p {{::item.fields.description.value}}
        .media
          imago-video(data="::item" ng-if="::item.fields.formats"
            controls="{{::!!item.fields.controls.value}}" stop-event="click")
          imago-image(ng-if="::(!item.fields.formats && item.serving_url)" data="::item")

      //- blocklist start
      .blockList(ng-class="item.fields.layout.value" ng-switch-when="blockList")
        .block
          h2 {{::item.fields.title.value}}
        .block
        .block(ng-repeat="block in ::item.assets track by block._id")
          h3 {{::block.fields.title.value}}
        .block.learnmore(ng-show="::page.data.path ==='/home'")
          a(href="/services")
            h3 +
              br
              | Learn More

      //- text
      .textContent.padding(ng-class="[{indent:item.fields.indent.value},item.fields.align.value]" ng-style="{backgroundColor: item.fields.color.value}" ng-switch-when="text")
        .text(ng-bind-html="item.fields.text.value" ng-show="item.fields.text.value")
        .media
          imago-video(data="::item" ng-if="::item.fields.formats"
            controls="{{::!!item.fields.controls.value}}" stop-event="click")
          imago-image(ng-if="::(!item.fields.formats && item.serving_url)" data="::item")


      //- image
      .image(ng-class="item.fields.size.value" ng-switch-when="image")
        imago-image(ng-if="::item.serving_url" data="::item")

      //- video
      .video(ng-switch-when="video")
        imago-video(data="::item" ng-if="::item.fields.formats"
          controls="{{::!!item.fields.controls.value}}" stop-event="click")

      .mapWidget.padding(ng-class="::item.fields.align.value" ng-switch-when="map")
          ui-gmap-google-map(
            ng-if="::item.fields.address.latlng"
            center="::item.fields.address.center"
            zoom="14"
            draggable="true"
            options="{styles: gmapstyle}"
            )
            div(ng-init="opts = {animation:1}")
              ui-gmap-marker(
                idKey="::item._id"
                coords="::item.fields.address.latlng"
                events="page.eventsMarker"
                dragable="true"
                options="{animation:4}"
                icon="{url:'https://jce.imago.io/jce/latest/i/mapicon.png'}"
              )

      .galleryWidget(ng-switch-when="gallery")

