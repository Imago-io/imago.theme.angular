div.zoomIn
  position: fixed
  top: 0
  left: 0
  width: 100% !important
  height: 100%
  margin: 0 !important
  background-size: auto 75%
  background-position: center center
  background-color: rgba(255, 255, 255, .9)
  background-repeat: no-repeat
  transition: all 200ms
  &:hover
    cursor: zoom-out !important
  &.ng-hide-remove
  &.ng-hide-add
    display:block !important

  &.ng-hide-add
    animation: 0.3s zoomHide

  &.ng-hide-remove
    animation: 0.3s zoomShow

@keyframes zoomHide
  0% { opacity: 1 }
  100% { opacity: 0 }

@keyframes zoomShow
  0% { opacity: 0 }
  100% { opacity: 1 }

