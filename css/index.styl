  .menubutton
    font-size: 2em
    padding: 15px 20px
    position: fixed
    z-index: 5
    left: 0
    height: 100%

    i
      margin-right: 10px

    &:hover, &:focus
      cursor: pointer

  .menubutton.ng-hide-add,
  .menubutton.ng-hide-remove
    transition:0.3s linear all
    display:block !important
    opacity:1;

  .menubutton.ng-hide
    opacity:0;

  .menu
    &:hover
      a
        color: rgb(153, 153, 153)
    a
      color: black
      padding: 7px 10px
      // font-weight: bold
      font-size: 17px
      text-transform: uppercase
      transition: all 300ms
      &:hover
        color: black
    .active
      color: rgb(153, 153, 153)

  .menu.ng-hide-remove,
  .menu.ng-hide-add
    display:block !important;

  .menu.ng-hide-add
    animation: 0.5s hide;

  .menu.ng-hide-remove
    animation: 0.5s show;

@keyframes hide
  0% { transform: translateX(0) }
  100% { transform: translateX(-265px) }

@keyframes show
  0% { transform: translateX(-20px) }
  50% { transform: translateX(10px) }
  100% { transform: translateX(0) }

