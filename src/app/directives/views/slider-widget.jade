.imagoslider(ng-style="elementStyle")
  .nexslider(ng-style="imageStyle",
            ng-swipe-left="goPrev()",
            ng-swipe-right="goNext()")
    //- .debug {{slideSource | json}}
    .prev(ng-show="confSlider.enablearrows",
          ng-click="goPrev()")
    .next(ng-show="confSlider.enablearrows",
          ng-click="goNext()")
    .slide(ng-class="{'active':isCurrentSlideIndex($index)}",
          ng-repeat="slide in slideSource",
          ng-hide="!isCurrentSlideIndex($index)")
      div(imago-image,
          source="slide")
